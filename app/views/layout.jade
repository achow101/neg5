doctype html
html
  head
    meta(name="description" content="Neg5 is a quiz bowl tournament management system. It is meant to help tournament directors automate their registrations, game inputs, and statistis generation so that they can focus on running their tournament.")
    block titleContent
        title Neg 5
    link(rel="shortcut icon" href="/img/icon.ico")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css")
    link(href='https://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css')
    link(rel="stylesheet" href="/css/reset.css")
    link(rel="stylesheet" href="/css/style.css")

    block extrastylesheets

    block extrascripts

    //- Declaration
    mixin sidebar
        nav(class="cd-side-nav" style="position:fixed")
            form(name="tdid")
                input(type="hidden" value="#{tournamentd}" id="tdid_input")
            ul
                li(class="cd-label") #{tournamentd.name}

                li(class="has-children overview active")

                    ul()
                        li()
                            a(href="/home") Home
                            a(href="/tournaments") Your Tournaments
                            a(href="/create") Create a Tournament

            ul
                li(class="cd-label")
                li(class="action-btn")
                    a(href="/logout" style="background-color:rgb(0, 136, 136);") Logout

    //- Use

    //- Declaration
    mixin navbar

        nav(class="navbar navbar-default top-nav-bar navbar-fixed-top")
            div(class="container")
                if tournamentd
                    div(class="collapse navbar-collapse")

                        ul(class="nav navbar-nav")
                            li(class='list-element')
                                a(href="/tournaments" style="color:white;") Tournaments
                            li(class="list-element")
                                a(href="/create" style="color:white;") New Tournament
                        ul(class="nav navbar-nav navbar-right")
                            li(class="list-element")
                                a(href="/account" style='color:white;') #{tournamentd.name}
                            li(class="list-element")
                                a(href="/logout" style='color:white;') Logout

                if !tournamentd
                    div(class="collapse navbar-collapse navbar-right")
                        ul(class="nav navbar-nav")
                            li(class="list-element")
                                a(href="/" style="color:white") Login
                            li(class="list-element")
                                a(href="/about" style="color:white") About Neg 5
                            li(class="list-element")
                                a(href="https://github.com/mostafab/neg5" style="color:white")
                                     i(class="fa fa-github" style="margin-left:10px")
    //- Use


  body(class="body" style='background-color:white')
    block content

    script(src="/js/jquery-2.1.4.js")
    script(src="/js/modernizr.js")
    script(src="/js/jquery.menu-aim.js")
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js')
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js")
    script(src="/js/listjs/list.js")

    block scripts
